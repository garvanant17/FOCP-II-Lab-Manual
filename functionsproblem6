#include <iostream>
using namespace std;
int addition(int n1,int n2);
int subtract(int n1, int n2);
int multiplication(int n1, int n2);
int division(int n1,int n2);

int main(){
    int choice, n1,n2;
    cout<<"enter 1 for add, 2 for subtract, 3 for multiply, 4 for divide: ";
    cin>>choice;
    if (choice == 1){
        cout<<"number 1: ";
        cin>>n1;
        cout<<"number 2: ";
        cin>>n2;
        int result = addition(n1,n2);
        cout<<"ans: "<<result;
    }
    else if(choice == 2){
        cout<<"number 1: ";
        cin>>n1;
        cout<<"number 2:";
        cin>>n2;
        int result = subtract(n1,n2);
        cout<<"ans: "<<result;
    }
    else if(choice == 3){
        cout<<"number 1: ";
        cin>>n1;
        cout<<"number 2: ";
        cin>>n2;
        int result = multiplication(n1,n2);
        cout<<"ans: "<<result;
    }
    else if(choice == 4){
        cout<<"numerator: ";
        cin>>n1;
        cout<<"denominator: ";
        cin>>n2;
        int result = division(n1,n2);
        cout<<"ans: "<<result;
        }
        else{ cout<<"invalid"; return 0;}

}

int addition(int n1,int n2){
    int sum = n1+n2;
    return sum;
}
int subtract(int n1, int n2){
    int ans = n1 - n2;
    return ans;
}
int multiplication(int n1, int n2){
    int ans = n1*n2;
    return ans;
}
int division(int n1,int n2){
    if(n2 == 0)
    cout<<"can not divide by zero";
    int ans = n1/n2;
    return ans;
}
