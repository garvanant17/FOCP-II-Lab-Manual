#include <iostream>
using namespace std;
void findMinMax(int arr[], int size, int &minVal, int &maxVal);
int main(){
    int size;
            cout<<"enter the number of integers: ";
        cin>>size;
        int arr[size];
        for(int i=0; i<size; i++){
            cout<<"enter the values "<<i+1<<": ";
            cin>>arr[i];
        }
        int minVal, maxVal;
        findMinMax(arr, size, minVal, maxVal);
}

void findMinMax(int arr[], int size, int &minVal, int &maxVal){
    maxVal = arr[0];
    minVal = arr[0];
        for(int i = 0; i<size; i++){
        
            if(arr[i]>maxVal){
                maxVal = arr[i];
            }
            for(int i = 0; i<size; i++){
            if(arr[i]<minVal){
                minVal = arr[i];
            }
    }
}
cout<<"maximum value is: "<<maxVal<<endl;
cout<<"minimum value is: "<<minVal;
}
